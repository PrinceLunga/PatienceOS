@model POSSMvc.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>LoginViewModel</h4>
<div class="row" >
    <div class="col-md-6">
        <h1>External Login</h1>
        <hr/>
        @{ 
            if(Model.ExternalLogins.Count ==0)
            {
                <h1>No External Logins Configured</h1>
            }
            else
            {
                <form method="post" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                    @foreach(var provider in Model.ExternalLogins)
                    {
                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name"
                                title="Login using your @provider.Name account">

                        </button>
                    }
                </form>
            }
        }
    </div>
</div>