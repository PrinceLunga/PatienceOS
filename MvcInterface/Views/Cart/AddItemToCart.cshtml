    #
    #
    ##################################################################### */
</style>

<link rel="stylesheet" href="style.css">
<link href="http://www.professorcloud.com/styles/cloud-zoom.css" rel="stylesheet" type="text/css">
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.13/angular.js"></script>
<script type="text/JavaScript" src="http://www.professorcloud.com/js/cloud-zoom.1.0.2.js"></script>
<script src="~/Scripts/app.js"></script>


<h3>Product Details</h3>


<div ng-controller="MainCtrl">


    @foreach (var x in Model)
    {
        <div class="panel panel-default">
            <form asp-action="AddItemToCart" method="post" enctype="multipart/form-data">
                <div class="panel-heading">@x.Name</div>
                <div class="panel-body">
                    <div class="col-sm-3 col-md-6" style="color:blue">
                        <a href="http://localhost:56829/ZoomImages/@x.Image" class="cloud-zoom" rel="adjustX: 10, adjustY:-4">
                            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(x.Image))" width="400" height="400" />
                        </a>

                    </div>
                    <div class="col-sm-9 col-md-6">
                        <h3><span id="Category" style="color:black"><b>Category:</b></span></h3>

                        <h6><span id="Group" style="color:black">@x.Group</span></h6>

                        <h3><span id="Price" style="color:black"><b>Price:</b></span></h3>

                        <h6><span id="Price" style="color:black">@x.Price</span></h6>

                        <h3><span id="Department" style="color:black"><b>Department:</b></span></h3>
                        <h4><span id="SubGroup" style="color:black">@x.SubGroup</span></h4>
                        <h3><span id="Discount" style="color:black"><b>Discount</b></span></h3>
                        @*<h3><span id="mobilename" style="color:black"><b>Model:</b></span></h3>*@
                    </div>
                </div>


                <div>
                    <button type="submit" class="btn btn-info btn-lg" style="margin-left:60px">
                        <span class="glyphicon glyphicon-shopping-cart"></span> Add To Cart
                    </button>

                    <a id="btn_add" href="@Url.Action("Index", "Product")" class="btn btn-info btn-lg" style="margin-left:60px">
                        <span class="glyphicon glyphicon-eye-open"></span> Continue shopping
                    </a>
                    <br />
                    <br />

                </div>
            </form>
        </div>
    }
</div>


